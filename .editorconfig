# Master settings list: https://EditorConfig.org

root = true

[*.{js,jsx,json,mjs,scss}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[**/schemas/*.json]
indent_size = 4

[*.md]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
end_of_line = crlf
insert_final_newline = true
